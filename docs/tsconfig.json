{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "allowJs": true
    },
    "include": [
      "**/*",
      ".vitepress/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}